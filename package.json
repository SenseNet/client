{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**@types/**",
      "**/react-moment",
      "**/material-ui-pickers",
      "**/react-markdown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "sensenet-kfi-cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "lerna": "^3.5.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "next"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:dms": "yarn && yarn build && yarn workspace sn-dms-demo run build:webpack",
    "test": "yarn jest && lerna run test",
    "clean": "lerna clean",
    "fix": "lerna run fix --parallel",
    "lint": "lerna run lint --parallel"
  },
  "jest": {
    "roots": [
      "<rootDir>/examples/sn-dms-demo",
      "<rootDir>/examples/sn-react-redux-todo-app",
      "<rootDir>/packages/sn-authentication-jwt",
      "<rootDir>/packages/sn-client-auth-google",
      "<rootDir>/packages/sn-client-utils",
      "<rootDir>/packages/sn-control-mapper",
      "<rootDir>/packages/sn-client-core",
      "<rootDir>/packages/sn-redux",
      "<rootDir>/packages/sn-repository-events",
      "<rootDir>/packages/sn-document-viewer-react",
      "<rootDir>/packages/sn-query",
      "<rootDir>/packages/sn-search-react",
      "<rootDir>/packages/sn-redux-promise-middleware"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.css$": "<rootDir>/jest/cssTransform.js",
      "^.+\\.(png|jpg)$": "<rootDir>/jest/fileTransform.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)",
      "**/test/*.+(ts|tsx|js)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/packages/**/src/*.{ts,tsx}",
      "!**/test/**/*.{ts,tsx}",
      "!**/__tests__/**/*.{ts,tsx}",
      "!**/*.d.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "dependencies": {
    "@types/jest": "^23.3.10"
  }
}
